<%= form_for product do |f| %>

  <div class="field">
    <%= f.label :product_no, "產品編號", class: 'label' %>
    <div class='control'>
    <%= f.text_field :product_no, class: 'input' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit '創建產品', class: 'button is-link' %>
    </div>
  </div>

<% end %>